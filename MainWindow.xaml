<Window x:Class="Hranilka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hranilka"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1600">
    <Grid >
        <Button x:Name="AddButton" Content="Добавить" HorizontalAlignment="Left" Margin="530,80,0,0" VerticalAlignment="Top" Height="30" Width="90" Click="AddButton_Click"/>
        <ListBox x:Name="MainListBox" Margin="10,80,1100,10" Cursor="Hand" SelectionChanged="MainListBox_SelectionChanged" RenderTransformOrigin="0.274,0.502"/>
        <Button x:Name="RefreshButton" Content="Обновить" HorizontalAlignment="Left" Margin="530,125,0,0" VerticalAlignment="Top" Height="30" Width="90" Click="RefreshButton_Click"/>
        <TextBlock x:Name="DateTextBlock" HorizontalAlignment="Left" Margin="317,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="154"/>
        <RichTextBox x:Name="MainPageRichTextBox" Margin="650,125,10,10">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="748,434,0,0" VerticalAlignment="Top" Click="LoadRTBContent"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Margin="650,40,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="940" Height="57"/>

    </Grid>
</Window>
