<Window
    x:Class="Hranilka.AddNewDataWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hranilka"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Hranilka.ViewModels"
    Title="Добавить новый текст"
    Width="800"
    Height="500"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:AddNewDataWindowViewModel />
    </Window.DataContext>
    <Grid>


        <ComboBox
            Width="200"
            Height="25"
            Margin="10,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding Path=Categories, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            SelectedItem="{Binding Path=CurrentCategory, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            IsSynchronizedWithCurrentItem="True"
            >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Id}"/>
                        <TextBlock Text=" - "/>
                        <TextBlock Text="{Binding Path=Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Категория"
            TextWrapping="Wrap" />

        <ComboBox
            Width="200"
            Height="25"
            Margin="230,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="Name"
            
            ItemsSource="{Binding Path=SubCategories, UpdateSourceTrigger=Default, Mode=TwoWay}"
            SelectedItem ="{Binding Path=CurrentSubCategory, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            IsSynchronizedWithCurrentItem="True"/>

        <TextBlock
            Margin="230,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Подкатегория"
            TextWrapping="Wrap" />

        <Button
            x:Name="SaveButton"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="SaveButton_Click"
            Content="Сохранить в файл" />
        <TextBox
            x:Name="CategoryBox"
            Width="190"
            Height="27"
            Margin="434,11,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Категория"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="DescriptionBox"
            Width="247"
            Margin="501,55,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Описание"
            TextWrapping="Wrap" />
        <RichTextBox x:Name="AddDataRichTextBox" Margin="10,99,10,35">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button
            Margin="0,11,590,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Добавить" Click="Button_Click" />
        <Button
            Margin="0,11,370,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Добавить" Click="Button_Click_1" />
        <TextBlock
            x:Name="TB1"
            Margin="671,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBlock"
            TextWrapping="Wrap" />

    </Grid>
</Window>
