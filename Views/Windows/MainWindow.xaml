<Window
    x:Class="Hranilka.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hranilka"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Hranilka.ViewModels"
    xmlns:da="clr-namespace:Hranilka"
    Title="{Binding Path=Title}"
    Width="1600"
    Height="800"
    mc:Ignorable="d">
    <!--  DataContext - есть у всех визуальных объектов, наследуется для всех объектов ниже, т. е. уходит в Grid  -->
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Свойства" />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="github.com/Disthere" />
            </StatusBarItem>
        </StatusBar>
        <TabControl Background="Beige">
            <TabItem Header="Текстовые данные">
                <Grid>
                    <Button
                        x:Name="AddButton"
                        Width="90"
                        Height="30"
                        Margin="530,80,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="AddButton_Click"
                        Content="Добавить" />
                    <ListView 
                        x:Name="MainListView"
                        Width="500"
                        Margin="10,80"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        SelectionChanged="MainListBox_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="400"
                                    DisplayMemberBinding="{Binding  }"
                                    Header="Описание" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding list_studfname}"
                                    Header="Дата создания" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button
                        x:Name="RefreshButton"
                        Width="90"
                        Height="30"
                        Margin="530,125,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="RefreshButton_Click"
                        Content="Обновить" />
                    <TextBlock
                        x:Name="DateTextBlock"
                        Width="154"
                        Height="23"
                        Margin="479,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        TextWrapping="Wrap" />
                    <RichTextBox
                        x:Name="MainPageRichTextBox"
                        Width="850"
                        Margin="10,125"
                        HorizontalAlignment="Right">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="RichTextBox" />
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <Button
                        Margin="555,178,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="LoadRTBContent"
                        Content="Button" />
                    <TextBox
                        x:Name="DescriptionTextBox"
                        Width="850"
                        Height="60"
                        Margin="10,40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Text="TextBox"
                        TextWrapping="Wrap" />
                    <ComboBox
                        Width="200"
                        Height="25"
                        Margin="10,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <ComboBoxItem>Собеседование</ComboBoxItem>
                        <ComboBoxItem>C# основы</ComboBoxItem>
                        <ComboBoxItem>Базы данных, SQL</ComboBoxItem>
                    </ComboBox>
                    <TextBlock
                        Margin="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="Категория"
                        TextWrapping="Wrap" />
                    <ComboBox
                        Width="200"
                        Height="25"
                        Margin="250,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <ComboBoxItem>Дата</ComboBoxItem>
                        <ComboBoxItem>Размер</ComboBoxItem>
                        <ComboBoxItem>Алфавит</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Ссылки">Другой текст</TabItem>
        </TabControl>
    </DockPanel>

</Window>
