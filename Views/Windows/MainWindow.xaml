<Window
    x:Class="Hranilka.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hranilka"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Hranilka.ViewModels"
    Title="{Binding Path=Title}"
    Width="1600"
    Height="800"
    mc:Ignorable="d">
    <!--  DataContext - есть у всех визуальных объектов, наследуется для всех объектов ниже, т. е. уходит в Grid  -->
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Свойства"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom"></StatusBar>
        <TabControl>
            <TabItem Header="Вкладка 1">
                <Grid>
                    <Button
            x:Name="AddButton"
            Width="90"
            Height="30"
            Margin="530,80,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="AddButton_Click"
            Content="Добавить" />
                    <ListBox
            x:Name="MainListBox"
            Margin="10,80,1100,10"
            Cursor="Hand"
            RenderTransformOrigin="0.274,0.502"
            SelectionChanged="MainListBox_SelectionChanged" />
                    <Button
            x:Name="RefreshButton"
            Width="90"
            Height="30"
            Margin="530,125,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="RefreshButton_Click"
            Content="Обновить" />
                    <TextBlock
            x:Name="DateTextBlock"
            Width="154"
            Height="23"
            Margin="479,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
                    <RichTextBox x:Name="MainPageRichTextBox" Margin="650,125,10,10">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="RichTextBox" />
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <Button
            Margin="555,178,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="LoadRTBContent"
            Content="Button" />
                    <TextBox
            x:Name="DescriptionTextBox"
            Width="940"
            Height="57"
            Margin="650,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
                    <ComboBox HorizontalAlignment="Left" Height="25" Width="200" Margin="10,40,0,0" VerticalAlignment="Top">
                        <ComboBoxItem>Собеседование</ComboBoxItem>
                        <ComboBoxItem>C# основы</ComboBoxItem>
                        <ComboBoxItem>Базы данных, SQL</ComboBoxItem>
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left" Margin="10" Text="Категория" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ComboBox HorizontalAlignment="Left" Height="25" Width="200" Margin="250,40,0,0" VerticalAlignment="Top">
                        <ComboBoxItem>Дата</ComboBoxItem>
                        <ComboBoxItem>Размер</ComboBoxItem>
                        <ComboBoxItem>Алфавит</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Ссылки">Другой текст</TabItem>
        </TabControl>
    </DockPanel>

</Window>
