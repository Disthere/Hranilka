<Window
    x:Class="Hranilka.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmd="clr-namespace:Hranilka.Infrastructure.Commands"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hranilka"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Hranilka.ViewModels"
    Title="{Binding Path=Title}"
    Width="1600"
    Height="800"
    mc:Ignorable="d">
    <!--  DataContext - есть у всех визуальных объектов, наследуется для всех объектов ниже, т. е. уходит в Grid  -->
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Свойства" />
                <MenuItem Header="Сохранить" />
                <MenuItem Command="{Binding CloseApplicationCommand}" Header="Выход" />
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="github.com/Disthere" />
            </StatusBarItem>
        </StatusBar>
        <TabControl Background="Beige">
            <TabItem Header="Текстовые данные">
                <Grid>
                    <ComboBox
            Width="200"
            Height="25"
            Margin="10,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Path=ContentCategories}" />

                    <TextBlock
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Категория"
            TextWrapping="Wrap" />

                    <ComboBox
            Width="200"
            Height="25"
            Margin="230,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Path=ContentCategories}" />

                    <TextBlock
            Margin="230,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Подкатегория"
            TextWrapping="Wrap" />
                    <Button
                        x:Name="AddButton"
                        Width="90"
                        Height="30"
                        Margin="594,77,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="AddButton_Click"
                        Content="Добавить" />
                    <ListView
                        x:Name="MainListView"
                        Width="550"
                        Margin="10,80"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        ItemsSource="{Binding Path=DataContainers}"
                        SelectionChanged= "MainListBox_SelectionChanged"
                        SelectedIndex="{Binding Path=CurrentDataContainer}"
                        >

                        <ListView.View>
                            <GridView>

                                <GridViewColumn
                                    Width="420"
                                    DisplayMemberBinding="{Binding Path=Description}"
                                    Header="Описание" />

                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding Path=CreateDate, ValidatesOnExceptions=True, StringFormat={}{0:u}}"
                                    Header="Дата создания" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <TextBlock
                        x:Name="DateTextBlock"
                        Width="154"
                        Height="23"
                        Margin="479,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        TextWrapping="Wrap" />
                    <RichTextBox
                        x:Name="MainPageRichTextBox"
                        Width="850"
                        Margin="10,125"
                        HorizontalAlignment="Right"
                        >
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="RichTextBox" />
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <TextBox
                        x:Name="DescriptionTextBox"
                        Width="850"
                        Height="60"
                        Margin="10,40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Text="TextBox"
                        TextWrapping="Wrap" />

                </Grid>
            </TabItem>
            <TabItem Header="Ссылки">Другой текст</TabItem>
        </TabControl>
    </DockPanel>

</Window>
